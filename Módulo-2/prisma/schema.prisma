generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model cliente {
  id_cliente Int    @id @default(autoincrement())
  nombre     String @db.VarChar(45)
  telefono   String @unique(map: "Cliente_telefono_key") @db.VarChar(20)
  email      String @unique(map: "Cliente_email_key") @db.VarChar(45)
}

model empleado {
  id_empleado Int    @id @default(autoincrement())
  nombre      String @db.VarChar(45)
  telefono    String @unique(map: "Empleado_telefono_key") @db.VarChar(20)
  email       String @unique(map: "Empleado_email_key") @db.VarChar(45)
  cargo       String @db.VarChar(45)
}

model pista {
  id_pista    Int          @id @default(autoincrement())
  numero      Int          @unique(map: "Pista_numero_key")
  tipo        pista_tipo
  precio_hora Decimal      @db.Decimal(2, 2)
  estado      pista_estado
}

enum pista_tipo {
  cubierta
  exterior
}

enum pista_estado {
  disponible
  ocupada
}
